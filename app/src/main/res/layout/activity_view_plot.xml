<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity_view_plot.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewPlotName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/textViewPlotLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot Length"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/textViewPlotDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created Date"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textViewPlotDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Plot"
            android:paddingBottom="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewPlotPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poin Penting"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>